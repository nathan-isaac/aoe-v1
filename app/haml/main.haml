!!! 5
%html 
    %head
        %meta{ :charset => "utf-8" } 
        %link{ :rel => "stylesheet", :href => "lib/font-awesome/css/font-awesome.min.css"}
        %link{ :rel => "stylesheet", :href => "http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800"}
        %link{ :rel => "stylesheet", :href => "css/master.css" }  
        %title AoE Team and Civ Generator 
    %body                    

        %section{ :class => 'fullwidth_container' }
            
            %aside{ :class => 'setup' }

                %div{ :class => 'edit-players' }
                    %h2 Add Players

                    %div{ :class => 'form-group' }
                        %input{ :type => 'text', :placeholder => 'Enter Player Name', :class => 'form-control form-control_light add-name-field' }

                    %div{ :id => 'players' }

                        %div{ :class => 'form-group' }
                            %input{ :type => 'text', :value => 'Example Name', :class => 'form-control' }
                            %i{ :class => 'form-control_action fa fa-trash-o' }
                            
                %div{ :class => 'p-bottom' }
                    %div{ :class => 'form-group' }
                        %select{ :class => 'form-control num-of-teams' }
                            %option{ :value => '1' } 1 team
                            - (2..8).each do |i|
                                %option{ :value => i } #{i} teams
                           
                    %button{ :type => 'button', :class => 'btn-primary gen-btn' } Generate

            %article{ :class => 'content' }

                %header{ :class => 'hero' }
                    %h1{ :class => 'hero_heading'} AoE Generator

                    %p{ :class => 'hero_descr'} An custom Age of Empires Team and Civilization Generator.

                %section{ :class => 'teams' }

    %script{ :src => "js/aoe.min.js" } 
    %script{ :src => "//localhost:35729/livereload.js" } 
